<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rs.project_result_mob.LoginActivity">

    <ImageView
        android:id="@+id/background_main"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/br_login" />

    <LinearLayout
        android:id="@+id/layout_login_head_LoginActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnImageExit"
                android:layout_width="@dimen/size_ic_exit"
                android:layout_height="@dimen/size_ic_exit"
                android:layout_gravity="right"
                android:src="@drawable/exit" />

            <DigitalClock
                android:id="@+id/digital_LoginActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize_clock"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_txt_wel.."
                android:text="@string/welcome"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize_txt_wel..." />
            <!-- LOGO TEXT -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_logoText_parent"
                android:gravity="center">


                <TextView
                    android:id="@+id/txtLogo1_LoginActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/HOCHIMINH"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSize_txt_HCMC..."
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtLogo2_LoginActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop_txt_att_parent"
                    android:gravity="center"
                    android:text="@string/Attractions"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSize_txt_att" />

            </RelativeLayout>


            <TextView
                android:id="@+id/txtPlease_LoginActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_please_logo"
                android:text="@string/please...."
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_button_LoginActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="@dimen/marginBottom_button">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/marginBottom_button">

            <Button
                android:id="@+id/btnLoginGoogle_LoginActivity"
                android:layout_width="@dimen/width_button"
                android:layout_height="@dimen/height_button"
                android:background="@color/button_login_google"
                android:text="@string/lginGoogle"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize_btn"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/btnLoginFaceBook_LoginActivity"
                android:layout_width="@dimen/width_button"
                android:layout_height="@dimen/height_button"
                android:background="@color/button_login_facebook"
                android:text="@string/lginFacebook"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize_btn"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_or_LoginActivity"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/marginTop_view"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/size_view"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/view_login_activity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_LR_or"
                android:layout_marginRight="@dimen/margin_LR_or"
                android:text="@string/or"
                android:textColor="@color/txtOr"
                android:textSize="@dimen/fontSize_or"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/size_view"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/view_login_activity" />

        </LinearLayout>

        <Button
            android:id="@+id/btnLoginUser_LoginActivity"
            android:layout_width="@dimen/width_button"
            android:layout_height="@dimen/height_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/marginBottom_button"
            android:background="@color/button_login_user"
            android:text="@string/lginUser"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSize_btn"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>

