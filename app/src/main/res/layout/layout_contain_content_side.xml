<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Menu_Activity"
    android:weightSum="10"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textSize="@dimen/fontSize_Welcome"
        android:text="@string/txtWelcome" />
    <View
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@color/view_welcome"
        android:layout_weight="0.05">

    </View>
    <TextView
        android:layout_weight="4"
        android:gravity="start"
        android:layout_marginTop="50dp"
        android:textSize="22dp"
        android:layout_marginLeft="@dimen/mLR_content_wel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/content_Welcome" />

</LinearLayout>
