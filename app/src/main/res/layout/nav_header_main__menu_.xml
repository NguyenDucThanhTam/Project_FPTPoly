<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageView
        android:id="@+id/img_exit_drawer_menu"
        android:layout_width="@dimen/size_icon_header_menu"
        android:layout_height="@dimen/size_icon_header_menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:src="@mipmap/ic_logout" />

    <ImageView
        android:id="@+id/img_settings_drawer_menu"
        android:layout_width="@dimen/size_icon_header_menu"
        android:layout_height="@dimen/size_icon_header_menu"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/img_exit_drawer_menu"
        android:src="@mipmap/ic_settings" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_drawer_nav"
        android:layout_width="@dimen/size_avatar_nav_menu"
        android:layout_height="@dimen/size_avatar_nav_menu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_user"
        app:civ_border_color="#ffffff"
        app:civ_border_width="3dp" />

</RelativeLayout>
